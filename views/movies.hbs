<div class="container">
    {{#each response}}
    <div class="card" style="min-width: 200px !important;">
        <img src="{{image}}" class="card-img-top img-size" alt="{{title}}">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <a href="/details/{{id}}" class="btn btn-primary">See More</a>
        </div>
    </div>
    {{/each}}
</div>



