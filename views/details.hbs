<div class="card mb-3" style="max-width: 100vw;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{image}}" class="card-img" alt="{{title}}" style="max-height: 422px !important; max-width: 284px !important;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{director}}</p>
        <p class="card-text">Stars:</p>
        <ul>
            {{#each stars}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p class="card-text">{{description}}</p>
        <p class="card-text"><small class="text-muted">
            {{#each showtimes}}
                -{{this}}-
            {{/each}}
        </small></p>

        <a href="/movies">Go back</a>
      </div>
    </div>
  </div>
</div>